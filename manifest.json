{
  "manifest_version": 3,
  "name": "Article Paper Format",
  "version": "1.0",
  "description": "Reformats article pages to look like a paper, moving ads to the side or bottom",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 